%--------------------------------------------------
% 日付
\newcommand{\symposiumdate}[4]{
  \hspace{3zw}
  \Large \rightline{No.{#1}\quad{#2} / {#3} / {#4}}
}

%--------------------------------------------------
% タイトル
\newcommand{\symposiumtitle}[2]{
  \centering
  \vrule width 14cm height 0.1cm\\
  \vspace{-0.6cm}
  \vrule width 13.5cm height 0.02cm\\
  \vspace{0.6cm}
  {\fontsize{36pt}{0pt}\selectfont
  {#1}\\
  }
  \vspace{0.5cm}
  \LARGE {#2}\\
  \vrule width 13.5cm height 0.02cm\\
  \vspace{-0.65cm}
  \vrule width 14cm height 0.1cm\\

}

